<div class="col-sm-8 blog-main">

  <h2><%= @blog.title %></h2>
  <p class="breadcrumb-item">Published under the topic: 
  	<%#=@blog.topic.title%> 
  </p> 
	<p>
		<%= link_to 'Edit', edit_blog_path(@blog) if logged_in?(:site_admin) %> |
		<%= link_to 'Back', blogs_path %>
	</p> 
	
	<p>
		<%= @blog.body %>
	</p>


	<!-- Start of comment form -->
	<%= render 'comments/comment_form' %>
	<!-- End of comment form -->


	<!-- Start of comments -->
	<div id="comments" data-bog-id="<% @blog.id %>" >
		<%= render @blog.comments %>
	</div>
	<!-- End of comments -->

</div>