<div class="col-md-4">
	<div class="card" data-id="<%= portfolio_item.id %>" >
		<p><%= image_tag portfolio_item.thumb_image.to_s, width: '100%' unless portfolio_item.thumb_image.nil? %></p>
		<p class="card-text">
			<span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %> <%= portfolio_item.subtitle %></span>
		</p>
	</div>
</div>