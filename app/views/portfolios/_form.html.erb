<%= form_with(model: @portfolio_item, local: true) do |form| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control form-control-sm' %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: 'form-control form-control-sm' %>
      </div>

      <div class="form-group">
        <%= form.file_field :main_image %>
      </div>

      <div class="form-group">
        <%= form.file_field :thumb_image %>
      </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
          <%= form.label :body %>
          <%= form.text_area :body, class: 'form-control form-control-sm', rows:13 %>
        </div>
    </div>
  </div>

    <hr>
  <div class="col-md-12">
      <h2>Technoogies used:</h2>
      <div>
        <%= form.fields_for :technologies do |technology_form| %>
          <%= render 'technology_fields', f: technology_form %>
        <% end %>

        <div>
          <%= link_to_add_association 'Add Technology', form, :technologies %>
        </div>
      </div>

    <div class="form-group">
      <%= form.submit 'Save Portfolio Item', class: 'btn btn-primary btn-block' %>
    </div>
  </div>
  
<% end %>
