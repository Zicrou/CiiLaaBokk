<div class="col-sm-8 blog-main">
  <p id="notice"><%= notice %></p>

  <h1>Metiers</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @metiers.each do |metier| %>
        <tr>
          <td><%= metier.name %></td>
          <td><%= link_to 'Show', metier %></td>
          <td><%= link_to 'Edit', edit_metier_path(metier) %></td>
          <td><%= link_to 'Destroy', metier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Metier', new_metier_path %>
</div>