<div class="col-sm-8 blog-main">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Photo:</strong>
        <%#= image_tag @ouvrier.photo, width:'10%' %>
    <% if !@ouvrier.photo.attachment.nil? %>
      <% if @ouvrier.photo.content_type == "application/pdf" %>
      <%= link_to @ouvrier.photo.filename, polymorphic_url(@ouvrier.photo), target: "_blank" %>
          <iframe src="<%= rails_blob_path(@ouvrier.photo, disposition: :inline) %>" height="800" width="500"></iframe-->
      <% else %>
        <%= image_tag @ouvrier.photo, width: "50%" if @ouvrier.photo %>
      <% end %>
    <% end %>
  </p>


  <p>
    <strong>Photo CNI:</strong>
    <%= image_tag @ouvrier.photocni, width:'10%' if @ouvrier.photocni.attached? %>
  </p>
  
  <p>
    <strong>Numero CNI:</strong>
    <%= @ouvrier.numerocni %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= @ouvrier.name %>
  </p>

  <p>
    <strong>Prenom:</strong>
    <%= @ouvrier.prenom %>
  </p>

  <p>
    <strong>Téléphone:</strong>
    <%= @ouvrier.telephone %>
  </p>

  <p>
    <strong>Téléphone 2:</strong>
    <%= @ouvrier.telephone2 %>
  </p>

  <p>
    <strong>Domaine:</strong>
    <%= @ouvrier.domaine.name %>
  </p>

  <p>
    <strong>Métier:</strong>
    <%= @ouvrier.metier.name %>
  </p>

  <p>
    <strong>Région:</strong>
    <%= @ouvrier.region.name %>
  </p>

  <p>
    <strong>Département:</strong>
    <%= @ouvrier.departement.name %>
  </p>

  <p>
    <strong>Adresse:</strong>
    <%= @ouvrier.adresse %>
  </p>

  <p>
    <strong>Create By :</strong>
    <%= @ouvrier.user.name %>
  </p>

  <%= link_to 'Edit', edit_ouvrier_path(@ouvrier) %> |
  <%= link_to 'Back', ouvriers_path %>
</div>