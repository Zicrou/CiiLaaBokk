<%= form_with(model: exercice, local: true) do |form| %>
  <% if exercice.errors.any? %>
      <% exercice.errors.full_messages.each do |error| %>
      <%= alert_generator error %>
    <% end %>
  <% end %>

  <div class="form-group" style="">
    <%= form.label 'title:' %>
    <%= form.text_field :title, class: 'form-control', placeholder: "Title" %>
  </div>

  <div class="form-group">
    <%= form.label :introduction %>
    <%= form.text_area :introduction, class: 'form-control', placeholder: "Introduction" %>
  </div>

  <div class="form-group">
    <%= form.label :developpement %>
    <%= form.text_area :developpement, class: 'form-control', placeholder: "Developpement" %>
  </div>

  <div class="form-group">
    <%= form.label :conclusion %>
    <%= form.text_area :conclusion, class: 'form-control', placeholder: "Conclusion" %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: 'btn btn-primary' %>
  </div>
<% end %>
